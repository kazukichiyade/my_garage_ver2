<%= form_for(@user) do |f| %>

  <div class="form-group">
    <% if @user.image? %>
      <%= image_tag @user.image.url %>
    <% else %>
      <h2>no-image</h2>
    <% end %>
    <%= f.file_field :image %>
  </div>

  <!-- form-group// -->
  <div class="form-group">
    <%= f.label :名前 %>
    <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
  </div>

  <div class="form-group">
    <%= f.label :愛車 %>
    <%= f.text_field :a_word, class: "form-control", placeholder: "Favorite car" %>
  </div>


  <div class="form-group">
    <%= f.label :自己紹介 %>
    <%= f.text_area :introduction, class: "form-control", placeholder: "Introduction" %>
  </div>

  <!-- form-group// -->
  <div class="form-group">
    <%= f.submit "プロフィール編集を完了する", class: "btn btn-primary btn-block" %>
  </div>
<% end %>