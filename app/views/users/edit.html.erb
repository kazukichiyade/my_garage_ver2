<% provide(:title, "Setting | @user.name") %>
<h1>プロフィールを編集</h1>

<div class="form">
  <div class=" row home-signup">
    <aside class="form-main">
      <h3>SETTING FORM</h3>
      <div class="card">
        <article class="card-body">
          <%= form_for(@user) do |f| %>
            <%= render 'shared/error_messages' %>

            <!-- form-group// -->
            <div class="form-group">
              <%= f.label :名前 %>
              <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
            </div>

            <!-- form-group// -->
            <div class="form-group">
              <%= f.label :メールアドレス %>
              <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
            </div>

            <!-- form-group// -->
            <div class="form-group">
              <%= f.label :パスワード %>
              <%= link_to "パスワードを忘れましたか？", "#", class: "float-right" %>
              <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
            </div>

            <!-- form-group// -->
            <div class="form-group">
              <%= f.label :パスワード確認用 %>
              <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password_confirmation" %>
            </div>

            <!-- form-group// -->
            <div class="form-group">
              <%= f.submit "プロフィール編集を完了する", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>
        </article>
      </div>
    </aside>
  </div>
</div>