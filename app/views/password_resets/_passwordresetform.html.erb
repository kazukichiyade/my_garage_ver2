<%= form_for(:password_reset, url: password_resets_path) do |f| %>

  <!-- form-group// -->
  <div class="form-group">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
  </div>

    <!-- form-group// -->
  <div class="form-group">
    <%= f.submit "パスワードをリセットする", class: "btn btn-primary btn-block" %>
  </div>
<% end %>