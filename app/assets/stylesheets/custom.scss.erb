@import "bootstrap-sprockets";
@import "bootstrap";

/* body */

body {
  background-image: url("<%= asset_path('garage.jpg') %>");
  background-size: cover;
  font-family: Avenir, "Helvetica Neue", Helvetica, Arial, "Hiragino Sans",
    ヒラギノ角ゴシック, YuGothic, "Yu Gothic", メイリオ, Meiryo, "ＭＳ Ｐゴシック", "MS PGothic";
  margin: 0 auto;
}

/* header */

.navbar-brand {
  font-weight: normal;
}

.size1 {
  font-size: 30px;
}

.header-btn {
  margin-right: 30px;
}

/* _error_messages */
.alert {
  margin-top: 60px;
  margin-bottom: 0px;
  border-radius: 10px;
}

/* home */

hr {
  border: 2px solid #eeeeee;
}

.center {
  text-align: center;
  letter-spacing: 5px;
  line-height: 2;
  padding: 40px 60px;
  p {
  margin-top: 20px;
  margin-bottom: 20px;
  }
}

/* login-form */

aside {
  border: 2px solid #eeeeee;
  color: black;
  background-color: whitesmoke;
  padding: 25px 15px;
  h3 {
    margin-top: 10px;
    margin-bottom: 20px;
  }
}

label {
  font-weight: normal;
}

.checkbox {
  margin-left: 20px;
}

/* footer */

footer p {
  margin-bottom: 0px;
  color: whitesmoke;
  text-align: center;
  padding: 10px;
}

/* debug */

.debug_dump {
  box-sizing: border-box;
  clear: both;
  width: 100%;
  margin: 100px 0px;
}

/* show page*/

.show {
  background-color: whitesmoke;
  width: 100%;
  height: 700px;
  margin-top: 50px;
}

.show-top {
  display: flex;
  justify-content: space-around;
  padding: 50px;
  border: 1px solid gray;
}

.gravatar {
  border-radius: 50%;
}

.profile-setting-btn {
  display: flex;
  justify-content: center;
  margin-top: 20px;
}

/* signup login form */
.form {
  margin-top: 100px;
  display: flex;
  justify-content: center;
}

.form-main {
  padding: 0px 30px;
}

/* sign up form */
#error_explanation {
  color: red;
}

/* login page */
.form-group {
  font-weight: normal;
}
